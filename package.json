{
  "name": "twist-message",
  "private": false,
  "version": "0.0.1",
  "description": "A react message component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "author": "razzh",
  "license": "MIT",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "scripts": {
    "dev:site": "twist-scripts dev:site",
    "dev:component": "twist-scripts dev:component",
    "build:component": "twist-scripts build:component",
    "build:style": "twist-scripts build:style",
    "build": "pnpm run build:component && pnpm run build:style && pnpm run dtsgen",
    "build:site": "twist-scripts build:site",
    "dtsgen": "twist-scripts dtsgen './components/**/*.{tsx,ts}'",
    "clean": "./scripts/clean.sh",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@twist-space/react-icons": "^0.2.17",
    "clsx": "^2.1.1",
    "react-transition-group": "^4.4.5",
    "twist-scripts": "^0.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-transition-group": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "less": "^4.2.0",
    "less-plugin-clean-css": "^1.5.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
